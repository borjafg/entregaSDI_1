<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE datasource>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema">

	<datasource jndi-name="java:jboss/datasources/TaskManagerDS"
		enabled="true" use-java-context="true" pool-name="TaskManagerDS">

		<connection-url>jdbc:hsqldb:hsql://localhost/task_manager_db
		</connection-url>

		<driver>hsqldb.jar</driver>

		<pool>
			<min-pool-size>10</min-pool-size>
			<max-pool-size>20</max-pool-size>
			<prefill>true</prefill>
		</pool>

		<security>
			<user-name>sa</user-name>
			<password></password>
		</security>

	</datasource>

</datasources>